<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PressaoActivity">

        <TextView
            android:id="@+id/InfoPressao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="@string/infoPressao"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/InfoPressao">

            <RadioButton
                android:id="@+id/Pressao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickPressao"
                android:text="@string/pressao1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RadioButton
                android:id="@+id/Pressao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickPressao"
                android:text="@string/pressao2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RadioButton
                android:id="@+id/Pressao3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickPressao"
                android:text="@string/pressao3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RadioButton
                android:id="@+id/Pressao4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickPressao"
                android:text="@string/pressao4" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RadioButton
                android:id="@+id/Pressao5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickPressao"
                android:text="@string/pressao5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RadioButton
                android:id="@+id/Pressao6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickPressao"
                android:text="@string/pressao6" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_pressao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/proxima_pergunta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup6" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>